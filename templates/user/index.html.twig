{% extends 'base.html.twig' %}

{% block body_id 'user_index' %}

{% block main %}
    <h1>{{ 'title.edit_user'|trans }}</h1>

    {{ form_start(form, {attr: attr|default({})}) }}
        {{ form_widget(form) }}

        <button type="submit" class="{{ button_css|default("btn btn-primary") }}">
            <i class="fa fa-save" aria-hidden="true"></i> {{ button_label|default('action.save'|trans) }}
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('user_password') }}" class="btn btn-lg btn-block btn-danger">
            <i class="fa fa-lock" aria-hidden="true"></i> {{ 'action.change_password'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
